<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorBackground">

    <!-- Category Form -->
    <LinearLayout
        android:id="@+id/categoryForm"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/categoryText"
            android:text="Create Category"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/categoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category Name"
            android:autofillHints="name"
            android:padding="10dp" />

        <CheckBox
            android:id="@+id/promoted"
            android:text="Promoted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/createCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Category"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#fff"
            android:padding="12dp" />

        <Button
            android:id="@+id/cancelCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/colorPrimaryVariant"
            android:textColor="#fff"
            android:padding="12dp" />
    </LinearLayout>

    <!-- Movie Form -->
    <LinearLayout
        android:id="@+id/movieForm"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/movieText"

            android:text="Create Movie"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Movie Title"
            android:autofillHints="personName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/movieLogline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Movie Logline"
            android:autofillHints="text"
            android:padding="10dp" />

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image" />
        <ImageView
            android:id="@+id/movieImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Select Image" />

        <EditText
            android:id="@+id/movieCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Categories (comma-separated)"
            android:autofillHints="postalAddress"
            android:padding="10dp" />

        <Button
            android:id="@+id/createMovieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Movie"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorOnPrimary"
            android:padding="12dp" />

        <Button
            android:id="@+id/cancelMovieButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/colorPrimaryVariant"
            android:textColor="@color/colorOnPrimary"
            android:padding="12dp" />
    </LinearLayout>
</LinearLayout>
