<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.GuestMain">

  <!-- Hero Container -->


  <!-- Hero Content -->
  <LinearLayout
      android:id="@+id/hero_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/hero_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Meg"
        android:textSize="30sp"
        android:textColor="@color/colorOnSurface"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/hero_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore our platform and discover amazing features. Join us today to get started!"
        android:textSize="16sp"
        android:textColor="@color/colorOnSurface"
        android:layout_marginBottom="20dp"/>

    <!-- Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="20dp">

      <Button
          android:id="@+id/Signup"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Sign Up"
          android:layout_weight="1"
          android:background="@color/colorPrimary"
          android:textColor="@color/polaroidMain"
          android:padding="15dp"
          android:textSize="16sp"
          android:layout_marginEnd="10dp"/>

      <Button
          android:id="@+id/loginmain"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Log In"
          android:layout_weight="1"
          android:background="@color/colorPrimary"
          android:textColor="@color/polaroidMain"
          android:padding="15dp"
          android:textSize="16sp"/>
    </LinearLayout>
  </LinearLayout>

  <!-- Features Section -->
  <LinearLayout
      android:id="@+id/feature_section"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/colorOnSurface"
      android:padding="20dp"
      app:layout_constraintTop_toBottomOf="@+id/hero_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features"
        android:textSize="20sp"
        android:textColor="@color/colorOnSurface"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

      <!-- Feature 1 Container -->
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          app:cardElevation="5dp"
          app:contentPadding="20dp"
          android:layout_marginBottom="15dp"
          android:backgroundTint="@color/polaroidMain">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Easy-to-use interface"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:textAlignment="center"/>
      </androidx.cardview.widget.CardView>

      <!-- Feature 2 Container -->
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          app:cardElevation="5dp"
          app:contentPadding="20dp"
          android:layout_marginBottom="15dp"
          android:backgroundTint="@color/polaroidMain">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure and reliable"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:textAlignment="center"/>
      </androidx.cardview.widget.CardView>

      <!-- Feature 3 Container -->
      <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardCornerRadius="10dp"
          app:cardElevation="5dp"
          app:contentPadding="20dp"
          android:layout_marginBottom="15dp"
          android:backgroundTint="@color/polaroidMain">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessible from anywhere"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="10dp"
            android:textAlignment="center"/>
      </androidx.cardview.widget.CardView>

    </LinearLayout>


  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
